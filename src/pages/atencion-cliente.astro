---
import Layout from "../layouts/Layout.astro"
import atencion from "../images/pexels-anna-shvets-4226140.jpg"
---

<Layout title="Atencion al Cliente">
    <main id="atencion" class="flex items-center justify-evenly flex-col-reverse sm:flex-wrap">
        <div class="info w-1/2 sm:flex-grow-1">
            <img src={atencion}>
            <h2 class="text-center mt-3 mb-3 font-bold text-xl">Dejanos tu comentario</h2>
        </div>
        <div class="form w-1/2 sm:flex-grow-1">
            <div class="form-element my-2">
                <label class="text-sm " for="full-name">Nombre completo</label>
                <input type="text" id="full-name" placeholder="Elon Musk">
            </div>
            <div class="form-element my-2">
                <label class="text-sm " for="direccion">Direccion</label>
                <input type="text" id="direccion" placeholder="Av. Alonso de Ojeda">
            </div>
            <div class="form-element my-2">
                <label class="text-sm " for="seleccion">Que necesita?</label>
                <select id="selection">
                    <option value="pedir-instalacion">Pedir instalacion</option>
                    <option value="reportar-falla">Reporte de falla</option>
                    <option value="consulta">Consulta integral</option>
                    <option value="queja">Queja</option>
                    <option value="otros">Otros</option>
                </select>
            </div>
            <div class="form-element my-2">
                <label class="text-sm " for="coment">Escriba su comentario</label>
                <textarea id="coment" cols="40" rows="3"></textarea>
            </div>
            <div class="form-element my-2">
                <button>Enviar</button>
            </div>
        </div>
    </main>
</Layout>

<style>
    #atencion {
        background-image: url('/src/images/bg-all.jpg');
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
        height: 100vh;
        width: 100%;
    }
    input[type="email"],
    input[type="text"],
    textarea,
    select {
        margin-top: 0.25rem;
        display: block;
        width: 100%;
        padding: 0.3rem;
        outline: none;
        border: 1px solid #aaa;
        border-radius: 5px;
    }
    .form-element button {
        width: 100%;
        height: 40px;
        border: none;
        outline: none;
        font-size: 0.875rem;
        line-height: 1.25rem;
        background: #2db2fd;
        color: #f5f5f5;
        border-radius: 5px;
        cursor: pointer;
    }
    .form-element button:hover {
        background: #238cc9;
    }
</style>