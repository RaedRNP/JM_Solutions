---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Home Page">
  <main class="flex flex-col">
    <!-- <video autoplay muted loop id="game-video">
			<source src="../images/pexels-yan-krukov-9070660(540p).mp4" type="video/mp4">
		</video> -->
    <div class="text-white flex justify-center items-end flex-grow mb-8">
      <h1
        class="fancy-text text-6xl w-3/5 text-center font-normal text-[#2db2fd] uppercase leading-none"
      >
        BIENVENIDO AL INTERNET <span class="animate-charcter text-7xl">SIN LIMITES</span>
      </h1>
    </div>
    <footer class="text-center grow">
      <button
        class="text-white bg-[#2db2fd] rounded-full py-3 px-5 transition-all hover:bg-[#89d4ff] font-bold"
        >Conocenos</button
      >
    </footer>
  </main>
</Layout>

<style>
	@import url('https://fonts.googleapis.com/css2?family=Russo+One&display=swap');
  main {
    /* 
		position: fixed; */
    height: 100vh;
    background-image: url("../images/main-page.jpg");
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
  }
  .fancy-text {
	font-family: 'Russo One', sans-serif;
	letter-spacing: 5px;
    text-shadow: -0.03em 0.02em 0.03em #ad19ad,
	0.03em -0.02em 0.02em #89d4ff;
  }

  .animate-charcter {
    text-transform: uppercase;
    background-image: linear-gradient(
      -225deg,
      #2db2fd 0%,
	  #2db2fd 50%,
      #2db2fd 60%,
      #fff 70%,
	  #2db2fd 80%,
	  #2db2fd 100%
    );
    background-size: auto auto;
    background-clip: border-box;
    background-size: 200% auto;
    color: #fff;
    background-clip: text;
    text-fill-color: transparent;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    animation: textclip 2s ease infinite;
    display: inline-block;
	text-shadow: -0.01em -0.02em 0.01em transparent;
  }

  @keyframes textclip {
    to {
      background-position: 200% center;
    }
  }
</style>
