---
import Layout from "../layouts/Layout.astro";
import Button from "../components/Button.astro"
import videoGame from "../images/bg-main-vid.mp4";
---

<Layout title="Home Page">
  <video autoplay muted loop plays-inline id="game-video">
    <source src={videoGame} type="video/mp4" />
  </video>
  <main class="relative w-full h-screen flex items-center justify-center">
    <div class="absolute w-2/3">
        <h1
          class="fancy-text text-6xl w-full text-center font-normal text-[#3da9fc] uppercase leading-none mb-10"
        >
          BIENVENIDO AL INTERNET <span>SIN LIMITES</span>
        </h1>
    </div>
    <footer class="absolute w-full h-1/3 flex justify-center item-center bottom-0">
      <!-- <a
        href="/conocenos"
        class="text-[#fffffe] bg-[#3da9fc] rounded-2xl py-4 px-5 transition-transform hover:-translate-y-6 font-bold"
      >
        Conocenos
      </a> -->
      <Button path="/conocenos" spec="Conocenos" />
    </footer>
  </main>
</Layout>

<style>
  @import url("https://fonts.googleapis.com/css2?family=Russo+One&display=swap");
  main {
    height: 100vh;
  }
  .fancy-text {
    font-family: "Russo One", sans-serif;
    letter-spacing: 5px;
    text-shadow: -0.03em 0.02em 0.03em #ad19ad, 0.03em -0.02em 0.02em #89d4ff;
  }
  #game-video {
    position: absolute;
    right: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: -1;
  }
</style>
