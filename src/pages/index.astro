---
import Layout from "../layouts/Layout.astro";
import videoGame from "../images/bg-main-vid.mp4";
---

<Layout title="Home Page">
  <video autoplay muted loop id="game-video">
    <source src={videoGame} type="video/mp4" />
  </video>
  <main class="relative">
    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2">
    <div class="text-white">
      <h1
        class="fancy-text text-6xl w-full text-center font-normal text-[#2db2fd] uppercase leading-none mb-10"
      >
        BIENVENIDO AL INTERNET <span>SIN LIMITES</span>
      </h1>
    </div>
    <footer class="text-center">
      <a href="/conocenos"
        class="text-white bg-[#2db2fd] rounded-2xl py-4 px-5 transition-all hover:px-6 hover:bg-[#238cc9] font-bold">
        Conocenos
      </a>
    </footer>
    </div>
  </main>
</Layout>

<style>
  @import url("https://fonts.googleapis.com/css2?family=Russo+One&display=swap");
  main {
    height: 100vh;
  }
  .fancy-text {
    font-family: "Russo One", sans-serif;
    letter-spacing: 5px;
    text-shadow: -0.03em 0.02em 0.03em #ad19ad, 0.03em -0.02em 0.02em #89d4ff;
  }
  #game-video {
    position: fixed;
    right: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: -1;
  }
</style>
