---
import Layout from "../layouts/Layout.astro";
import Button from "../components/Button.astro";
import videoGame from "../images/production_id_4115283(540p).mp4";
---

<Layout title="Home Page">
  <video autoplay muted loop plays-inline id="game-video">
    <source src={videoGame} type="video/mp4" />
  </video>
  <main class="relative w-full h-screen flex items-center justify-center">
    <div class="sm:absolute sm:w-2/3">
      <h1
        class="fancy-text text-4xl sm:text-6xl w-full text-center font-normal text-[#00C4FF] uppercase leading-none mb-10"
      >
        ACORTANDO <span>DISTANCIAS</span>
      </h1>
    </div>
    <footer
      class="absolute w-full h-1/3 flex justify-center item-center bottom-0"
    >
      <Button path="/conocenos" spec="Conocenos" />
    </footer>
  </main>

  
</Layout>

<style>
  @import url("https://fonts.googleapis.com/css2?family=Russo+One&display=swap");
  main {
    height: 100vh;
  }
  .fancy-text {
    font-family: "Russo One", sans-serif;
    letter-spacing: 5px;
    text-shadow: -0.03em 0.02em 0.03em #e89429, 0.03em -0.02em 0.02em #00c4ff;
  }
  #game-video {
    position: absolute;
    right: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: -1;
  }

  @media (max-width: 640px) {
    #game-video {
      display: none;
    }
  }
</style>
