---
import Layout from '../layouts/Layout.astro';
---

<Layout title='Login'>
    <main id="sign" class="h-screen w-full grid place-items-center bg-opacity-80 bg-black">
        <div class="flex items-center justify-center md:h-4/6 h-screen md:w-2/5 w-full sm:bg-[#f5f5f5] md:rounded-2xl md:shadow-lg py-5 px-8">
            <div>
                <h2 class="text-center mt-3 mb-5 font-bold text-xl sm:text-slate-950 text-white">Inicio de Sesion</h2>
                <div class="form-element my-4">
                    <label class="text-sm sm:text-slate-950 text-white" for="email">Email</label>
                    <input type="email" id="email" placeholder="correo@mail.com">
                </div>
                <div class="form-element my-4">
                    <label class="text-sm sm:text-slate-950 text-white" for="password">Password</label>
                    <input type="password" id="password" placeholder="ContraseÃ±a">
                </div>
                <div class="form-element my-4">
                    <button>Iniciar Sesion</button>
                </div>
            </div>
        </div>
    </main>
</Layout>

<style>
    #sign {
        background-image: url("/src/images/bg-all.jpg");
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
        background-blend-mode: darken;
    }
    input[type="email"],
    input[type="password"] {
        margin-top: 0.25rem;
        display: block;
        width: 100%;
        padding: 0.5rem;
        outline: none;
        border: 1px solid #aaa;
        border-radius: 5px;
    }
    .form-element button {
        width: 100%;
        height: 40px;
        border: none;
        outline: none;
        font-size: 0.875rem;
        line-height: 1.25rem;
        background: #2db2fd;
        color: #f5f5f5;
        border-radius: 5px;
        cursor: pointer;
    }
    .form-element button:hover {
        background: #238cc9;
    }
</style>